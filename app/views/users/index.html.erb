<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p class="errors"><%= e %></p>
  <% end %>
<% end %>
<form class="form" action="/session" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
  <div class="form-group">
    <input class="form-control" type="text" name="email" placeholder="me@mydomain.com" />
  </div>
  <div class="form-group">
    <input class="form-control" type="password" name="password" placeholder="Enter a password" />
  </div>
  <button class="btn btn-primary center-block">Login</button>
  <h4>or</h4>
  <a href="/users/new"><button class="btn btn-primary center-block">Register</button></a>
</form>
