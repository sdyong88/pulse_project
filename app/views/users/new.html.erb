<h4>Register</h4>
<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p class="errors"><%= e %></p>
  <% end %>
<% end %>
<div class="form">
  <%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :first_name, "First Name:" %>
    <%= f.text_field :first_name, class: "form-control", placeholder: "Zingelbert " %>
  </div>
   <div class="form-group">
    <%= f.label :last_name, "Last Name:" %>
    <%= f.text_field :last_name, class: "form-control", placeholder: "Bembledack" %>
  </div>
  <div class="form-group">
    <%= f.label :email, "E-mail Address:" %>
    <%= f.email_field :email, class: "form-control", placeholder: "me@mydomain.com" %>
  </div>
  <div class="form-group">
    <%= f.label :password, "Password:" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :country_code %>
    <%= f.text_field :country_code, class: "form-control", id: "authy-countries", placeholder:'1' %>
  </div>
  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, class: "form-control", id: "authy-cellphone", placeholder:'408-555-5555' %>
  </div>
  <div class="form-group">
    <button class="btn btn-primary btn-block">Register</button>
  </div>
  <div class="form-group">
    <a href="/"><button class="btn btn-primary  btn-block">Login</button></a>
  </div>
  <% end %>
</div>
